<%= stylesheet_link_tag 'ricerca', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= stylesheet_link_tag 'usershow', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="container text-center pagina">
  <h1 class='boh fw-bold'style="color:black"><strong><%= @user.username + "#" + @user.id.to_s%></strong> </h1>
  <p class='boh fw-bold'><%= @user.name %></p>


  <div class="d-flex gap-3 mb-4  justify-content-center" >
    <% Note::MAX_RATING.times do |n| %>
      <%= inline_svg_tag("star.svg",
        class: "w-8 h-8 #{staruser_rating_class(@user, n)}") %>
    <% end %>
  </div>
  <div class="chart">
    <%= pie_chart(Note.where(user_id: @user.id).group(:rating).count)  %>
  </div>
</div>

<div class="container">

<h1 class="mt-5"style="color:black">Appunti di <%= @user.username %></h1>

<% @user.notes.each do |note| %>
<div class="card my-4">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-2">
            <h4 class="card-title mb-0">
              <p><%= note.name %></p>
            </h4>
            <% file_extension = note.format %>
            <% if file_extension == ".pdf" || file_extension == ".docx"%>
               <%= inline_svg_tag("file.svg", style: "margin-bottom:30px;") %>
            <% end %>
            <% if ['.mp4', '.avi', '.mov'].include?(file_extension.downcase) %>
              <%= image_tag("video.png", style: "width:35px;height:35px;margin-bottom:30px;") %>
            <% end %>
            <% if current_user && current_user != note.user %>
              <div class="d-flex gap-1 mb-1 BottoniStella justify-content-start align-items-center">
                <% Note::MAX_RATING.times do |n| %>
                  <%= button_to update_rating_path(note),
                  method: :patch,
                  params: { note: { rating: n + 1 } },
                  class: "border-0 bg-transparent d-flex justify-content-start BottoneSingolo" do %>
                    <%= inline_svg_tag("star.svg",
                    class: "w-8 h-8 #{star_rating_hover_class()} #{star_rating_class(note, n)}") %>
                  <% end %>
                <% end %>
  
          <h4 class="card-title">
            <a href="<%= personal_note_path(note.id) %>"><%= note.name %></a>
          </h4>
          <p class="card-text"><%= note.description %></p>
          <p class="card-text"> Autore: <%= note.user.username %></p>
          <% if current_user != note.user %>
            <% if current_user && current_user.favourite_notes.include?(note) %>
              <%= link_to "Rimuovi dai preferiti", remove_favourite_path(note_id: note.id), method: :delete, class: "btn btn-danger" %>
            <% elsif current_user%>
              <%= link_to "Aggiungi ai preferiti", add_favourite_path(note_id: note.id), method: :post, class: "btn btn-primary" %>
            <% end %>
          <% end %>
          <a href="<%= note.google_drive_link %>" class="btn btn-primary">Link Google Drive</a>
    </div>
  </div>
<% end %>
</div>
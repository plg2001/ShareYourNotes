<h1>Modifica delle informazioni</h1>
<%= form_for @user do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :current_password, "Password precedente" %>
    <%= form.password_field :current_password %>
  </div>
  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div class="field">
    <%= form.label :password_confirmation, "Conferma password" %>
    <%= form.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= form.submit 'Salva' %>
  </div>
<% end %>



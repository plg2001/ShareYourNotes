<%= form_with(model: @note, url: notes_path, multipart: true) do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %>

    <%= form.label :description %>
    <%= form.text_area :description %>

    <%= form.label :file %>
    <%= form.file_field :file %>

    <%= form.label :tags %>
    <%= form.collection_select :tag_ids, @tags, :id, :name, { selected: @note.tags.map(&:id) }, multiple: true %>

    <%= form.label :topics %>
    <%= form.collection_select :topic_ids, @topics, :id, :name, { selected: @note.topics.map(&:id) }, multiple: true %>


    <%= form.submit "Carica" %>
<% end %>
